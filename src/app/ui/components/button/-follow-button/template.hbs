{{form-button
	classNames="btn-danger confirm-button"
	icon="fa-heart-o"
	iconanim=true
	title=(if isLoading
		""
		(hotkey-title
			namespace="followbutton"
			action="confirm"
			title=(t "components.follow-button.confirm" name=name)
		)
	)
	action=(unless isLocked
		(if isExpanded (action "unfollow"))
	)
}}
{{form-button
	classNames="main-button"
	class=(if isLoading
		"btn-info"
		(if isPromptVisible
			"btn-success"
			(if isSuccessful "btn-success" "btn-danger")
		)
	)
	isLoading=(if isExpanded false isLoading)
	icon=(if isPromptVisible
		"fa-arrow-left"
		(if isSuccessful "fa-heart" "fa-heart-o")
	)
	iconanim=(bool-not isExpanded)
	title=(if isLoading
		""
		(hotkey-title
			namespace="followbutton"
			action="default"
			title=(if isPromptVisible
				(t "components.follow-button.keep" name=name)
				(if isSuccessful
					(t "components.follow-button.unfollow" name=name)
					(t "components.follow-button.follow" name=name)
				)
			)
		)
	)
	action=(unless isLocked
		(action (if isSuccessful
			(if isExpanded "collapse" "expand")
			"follow"
		))
	)
}}